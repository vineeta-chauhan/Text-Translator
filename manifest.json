{
	"manifest_version": 2,
	"name": "TextInterpreter",
	"description": "A text interpreter",
	"version": "1.0",
	
	 


	"permissions": [
		"storage"
	],
	"icons": { 
		"16": "img/pic16.png",
		"48": "img/pic48.png",
		"128": "img/pic128.png" 
	},
	"background": {
        "scripts": ["event.js"],
        "persistent": true
    },
	
	
	"browser_action": {
		"default_icon": {                    
			"19": "img/pic48.png",          
			"38": "img/pic48.png"          
		},
		"default_popup": "popup.html"
	},
	
	"web_accessible_resources": [
		"img/pic128.png"
	],
	"permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
	}
